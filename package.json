{
  "private": true,
  "scripts": {
    "prepare": "tsc",
    "prepare:watch": "npm run prepare -- -w",
    "test": "mocha --require ts-node/register -r tsconfig-paths/register 'packages/*/ts/**/*.test.ts'",
    "test:watch": "mocha -r source-map-support/register -r ts-node/register -r tsconfig-paths/register 'packages/*/ts/**/*.test.ts' --watch --watch-extensions ts"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0"
  }
}
