{
    "version": "2.5",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "lib": ["es2017", "dom"],
        "noLib": false,
        "downlevelIteration": true,
        "preserveConstEnums": true,
        "declaration": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": ["./node_modules/@types"],
        "baseUrl": "./packages",
        "outDir": "dist",
        "rootDir": "./",
        "paths": {
            "storex/lib/*": ["storex/ts/*"],
            "storex": ["storex/ts"],
            "memex-stemmer/lib/*": ["memex-stemmer/ts/*"],
            "memex-stemmer": ["memex-stemmer/ts"],
            "user-logic": ["user-logic/ts"],
            "user-logic/lib/*": ["user-logic/ts/*"],
        }
    },
    "filesGlob": ["./packages/*/ts/**/*.ts", "!./node_modules/**/*.ts"]
}
