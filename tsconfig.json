{
    "version": "2.5",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "lib": ["es2017", "dom"],
        "noLib": false,
        "downlevelIteration": true,
        "preserveConstEnums": true,
        "declaration": true,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": ["./node_modules/@types"],
        "baseUrl": "./packages",
        "outDir": "dist",
        "rootDir": "./",
        "paths": {
            "@worldbrain/storex/lib/*": ["@worldbrain/storex/ts/*"],
            "@worldbrain/storex": ["@worldbrain/storex/ts"],
            "@worldbrain/storex-backend-dexie/lib/*": ["@worldbrain/storex-backend-dexie/ts/*"],
            "@worldbrain/storex-backend-dexie": ["@worldbrain/storex-backend-dexie/ts"],
            "@worldbrain/storex-backend-sequelize/lib/*": ["@worldbrain/storex-backend-sequelize/ts/*"],
            "@worldbrain/storex-backend-sequelize": ["@worldbrain/storex-backend-sequelize/ts"],
            "@worldbrain/memex-stemmer/lib/*": ["@worldbrain/memex-stemmer/ts/*"],
            "@worldbrain/memex-stemmer": ["@worldbrain/memex-stemmer/ts"],
            "user-logic": ["user-logic/ts"],
            "user-logic/lib/*": ["user-logic/ts/*"],
        }
    },
    "filesGlob": ["./packages/*/ts/**/*.ts", "!./node_modules/**/*.ts"]
}
